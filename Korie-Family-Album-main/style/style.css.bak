body, html {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
}

.carousel-container {
    width: 100%;
    height: 400px;
    overflow: hidden;
    margin: 0; /* Ensures no extra space */
    padding: 0;
}

.carousel-slide {
    width: 100%;
    height: 100%;
    padding: 40px;
    text-align: center;
    font-size: 1.8rem;
    font-weight: bold;
    color: #fff;
    background-color: #333;
    display: none;
}

.prev-btn, .next-btn {
    position: absolute;
    top: 50%;
    transform: transl√©ateY(-50%);
    background-color: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: none;
    padding: 10px;
    cursor: pointer;
    font-size: 24px;
}

.prev-btn { left: 10px;  top: 30%; }
.next-btn { right: 10px; top: 30%; }

