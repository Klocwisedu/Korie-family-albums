.sidebar {
    position: fixed;
    width: 250px;
    height: 100vh;
    left: -300px; /* Sidebar starts hidden */
    transition: left 0.3s ease-in-out;
}

.sidebar.active {
    left: 0; /* Sidebar opens */
}

.content {
    transition: margin-left 0.3s ease-in-out;
}

.content.expanded {
    margin-left: 250px; /* Moves content when sidebar opens */
}



.header {
    margin-left: 250px; /* Prevents overlap with sidebar */
    padding: 20px;
}



